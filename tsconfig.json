{
  "compilerOptions": {
      "target": "ESNEXT",
      "module": "ESNext",
      "allowJs": true,
      "checkJs": true,
      "jsx": "react",
      "jsxFactory": "h",
      "removeComments": true,
      "noEmit": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}